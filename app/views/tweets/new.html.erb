<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>つぶやきをする</h2>
    <%= render 'form' %>
    
        <% @tweets.each do |tweet| %>
    <div class="row tubuyaki">
      <p><%= tweet.content %></p>
      <%= link_to "編集する", edit_tweet_path(tweet.id) %>
      <%= link_to '削除する', tweet_path(tweet), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
    </div>
    <% end %>
  </div>
</div>